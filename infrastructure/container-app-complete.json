{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "15466378405266639731"
    }
  },
  "parameters": {
    "containerAppName": {
      "type": "string",
      "metadata": {
        "description": "Nome do Container App"
      }
    },
    "acrName": {
      "type": "string",
      "metadata": {
        "description": "Nome do Azure Container Registry (ACR)"
      }
    },
    "azureOpenAIEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Endpoint do modelo Azure OpenAI (ex: https://xxx.openai.azure.com/)"
      }
    },
    "azureOpenAIDeployment": {
      "type": "string",
      "defaultValue": "gpt-4o",
      "metadata": {
        "description": "Nome do deployment do Azure OpenAI (ex: gpt-4o)"
      }
    },
    "gitRepoUrl": {
      "type": "string",
      "defaultValue": "https://github.com/macieljrBiz/ai-container-demo.git",
      "metadata": {
        "description": "RepositÃ³rio Git contendo o Dockerfile"
      }
    },
    "gitBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "Branch do repositÃ³rio Git"
      }
    }
  },
  "variables": {
    "logAnalyticsName": "[format('log-{0}', parameters('containerAppName'))]",
    "containerAppEnvName": "[format('env-{0}', parameters('containerAppName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-01-01-preview",
      "name": "[parameters('acrName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": false
      }
    },
    {
      "type": "Microsoft.ContainerRegistry/registries/tasks",
      "apiVersion": "2023-01-01-preview",
      "name": "[format('{0}/{1}', parameters('acrName'), 'buildImage')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "status": "Enabled",
        "agentConfiguration": {
          "cpu": 2
        },
        "platform": {
          "os": "Linux",
          "architecture": "amd64"
        },
        "source": {
          "git": {
            "repositoryUrl": "[parameters('gitRepoUrl')]",
            "branch": "[parameters('gitBranch')]"
          }
        },
        "step": {
          "type": "Docker",
          "contextPath": "container-app",
          "dockerFilePath": "container-app/Dockerfile",
          "isPushEnabled": true,
          "imageNames": [
            "ai-container-app:latest"
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2023-08-01",
      "name": "runBuildImage",
      "location": "[resourceGroup().location]",
      "kind": "AzureCLI",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {}
      },
      "properties": {
        "azCliVersion": "2.62.0",
        "retentionInterval": "PT1H",
        "timeout": "PT30M",
        "environmentVariables": [
          {
            "name": "ACR_NAME",
            "value": "[parameters('acrName')]"
          }
        ],
        "scriptContent": "echo \"### Iniciando build da imagem no Azure...\" && az acr task run --registry $ACR_NAME --name buildImage"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries/tasks', parameters('acrName'), 'buildImage')]"
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerAppEnvName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerAppName')]",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8000,
            "transport": "auto"
          },
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').loginServer]",
              "identity": "system"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "app",
              "image": "[format('{0}/ai-container-app:latest', reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').loginServer)]",
              "resources": {
                "cpu": "[json('0.5')]",
                "memory": "1Gi"
              },
              "env": [
                {
                  "name": "AZURE_OPENAI_ENDPOINT",
                  "value": "[parameters('azureOpenAIEndpoint')]"
                },
                {
                  "name": "AZURE_OPENAI_DEPLOYMENT",
                  "value": "[parameters('azureOpenAIDeployment')]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]",
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "[resourceId('Microsoft.Resources/deploymentScripts', 'runBuildImage')]"
      ]
    }
  ],
  "outputs": {
    "containerAppUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName')), '2023-05-01').configuration.ingress.fqdn)]"
    },
    "acrLoginServer": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').loginServer]"
    },
    "imageName": {
      "type": "string",
      "value": "[format('{0}/ai-container-app:latest', reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').loginServer)]"
    },
    "nextSteps": {
      "type": "string",
      "value": "ðŸš€ Deploy concluÃ­do!\r\n\r\nVocÃª pode verificar a imagem no ACR com:\r\naz acr repository list --name ${acrName}\r\n\r\nOu listar os logs:\r\naz containerapp logs show --name ${containerAppName} --resource-group ${resourceGroup().name} --follow\r\n"
    }
  }
}